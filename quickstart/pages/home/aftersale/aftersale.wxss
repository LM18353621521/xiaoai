
.lists{
	width: 100%;
}
.item{
	width: 94%;
	padding: 20rpx 3%;
	margin:0 auto 10rpx;
	background: #f4f4f4;
	overflow: hidden;
  display: flex;
  border-bottom: 1px solid #f8f8f8;
}
.item:last-child{
	margin:0 auto 0rpx;
}
.lt{
	width:184rpx;
  flex: 0 0 184rpx;
  height: 184rpx;
  margin-right: 4%;
}
.rt{
  flex: 1;
}
.lt image{
	width: 100%;
	height: 100%;
	border-radius: 2px;
}
.rt view:first-child{
  width: 75%;
	font-size: var(--fontSize);
  height: 80rpx;
	line-height:40rpx;
	color: #4c4c4c;
	overflow:hidden;
  text-overflow:ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.rt view:nth-child(2){
	font-size: var(--fontSize);
	color: #aaa;
	margin-top: 20rpx;
}
.rt view:last-child{
	font-size:26rpx;
  height: 50rpx;
	line-height:50rpx;
	color: #444444;
	overflow:hidden;
    text-overflow:ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 1;
    -webkit-box-orient: vertical;
    margin-top:56rpx;
}
.aa{
	font-size: var(--fontSize);
	color: #ff4a00;
}
.aa text{

}
.bb{
	float: right;
	width: 28%;
	text-align: right;
	font-size: var(--fontSize);
	color: #4c4c4c;
}





.money-box {
  width:88%;
  margin:0 auto;
  height: 60rpx;
  overflow: hidden;
}

.money-box-left {
  width: 50%;
  height: 60rpx;
  line-height: 60rpx;
  font-size: var(--fontSize);
  color: #4c4c4c;
  overflow: hidden;
  float: left;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.money-box-right {
  width: 50%;
  height: 60rpx;
  line-height: 60rpx;
  font-size: var(--fontSize);
  color: #B82F89;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  float: left;
  text-align: right;
}
