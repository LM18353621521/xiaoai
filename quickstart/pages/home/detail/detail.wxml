<!-- <import src="../../wxParse/wxParse.wxml"/>  -->
<view class='{{showfuceng==0?"hidecontainer":""}}'>

  <swiper indicator-dots="true" autoplay="true" interval="5000" duration="1000" indicator-color="#fff" indicator-active-color="#ff3399">
    <block wx:for="{{goodsInfo.imgpath}}">
      <swiper-item>
        <image src="{{item}}" class="slide-image" />
      </swiper-item>
    </block>
    <!-- <view class='haltblack'>
          <view class='haltblack1' bindtap='collectbtn'><image class="collect" src="{{collect==0?'../../../images/collect.png':'../../../images/collectyes.png'}}"></image></view>
          <view class='haltblack2'><image class="collect" src="../../../images/share.png"></image></view>
      </view> -->
  </swiper>
  <view class='tit'>{{goodsInfo.name}}</view>
  <view class='tit-info'>{{goodsInfo.brief}}</view>
  <view class='money-info'>￥{{goodsInfo.price}}</view>
  <view class='integral'>
    <view class='integral1'>
      <text>￥{{goodsInfo.price_origial}}</text>
      <text>销量：{{goodsInfo.sales}}</text>
    </view>
    <view class='integral2'>
      <view class="like" bindtap="showf3" wx:if="{{config.share_btn_switch==1}}">
        <image class="likeimg" src="../../../images/share.png" />
        <view class="likefont">分享</view>
      </view>
      <view class="like">
        <button open-type='contact'>
          <image class="likeimg" src="../../../images/footer-ear.png" />
          <view class="likefont">客服</view>
        </button>
      </view>
      <view class="like" bindtap='collect_do'>
        <image class="likeimg" src="{{has_collect==0?'../../../images/like.png':'../../../images/like-active.png'}}" />
        <view class="likefont">{{collect_num}}人喜欢</view>
      </view>
    </view>
  </view>
  <!-- <view class='revising-info'>运费：免运费</view> -->
  <view class='quan-box' bindtap='showf1' wx:if="{{couponList.length>0}}">
    <view class='quan-tit'>领券</view>
    <view class='quan-tab'>
      <view class='quan-item' wx:for="{{couponList}}" wx:if="{{index<3}}">
        <image src="../../../images/coupon-bg.png" />
        <text>满{{item.limit}}减{{item.money}}</text>
      </view>

    </view>
    <view class='quan-num'>共{{couponList.length}}张</view>
  </view>
  <view class='line20'></view>

  <view class="le" bindtap='showfu'>
    <view class="leleft">已选：{{cur_spec}} </view>
    <view class="leright">
      <view bindchange="startplace" value="{start}}" range="{{startlocal}}">
        <view class="weui-input">{{num}}件</view>
      </view>
    </view>
    <image src="../../../images/right.png"></image>
  </view>
  <view class='line20'></view>

  <view class="box">
    <view bindtap="press" class="boxa" data-current="0">
      <view class="ti1 {{current == 0 ? 'ti1active':''}}">商品详情</view>
    </view>
    <view bindtap="press" class="boxa" data-current="1">
      <view class="ti1 {{current == 1 ? 'ti1active':''}}">评价</view>
    </view>
    <view class='line1'></view>
  </view>
  <view class="tab {{current == 0 ? 'show':''}}">
     <rich-text nodes="{{goodsInfo.description}}" bindtap="tap"></rich-text> 
    <!-- <view class="wxParse">
      <template is="wxParse" data="{{wxParseData:goodsInfo.description}}"/>
    </view> -->
  </view>
  <view class="tab {{current == 1 ? 'show':''}}">
    <view class="discuss-wrapper">
      <view class="discuss-item {{cur_comment == 0 ? 'red':''}}" bindtap='tab_comment' data-index="0">
        <view class="discuss-tita">全部</view>
        <view class="discuss-titb">（{{comment[0]}}）</view>
      </view>
      <view class="discuss-item {{cur_comment == 1 ? 'red':''}}" bindtap='tab_comment' data-index="1">
        <view class="discuss-tita">好评</view>
        <view class="discuss-titb">（{{comment[1]}}）</view>
      </view>
      <view class="discuss-item {{cur_comment == 2 ? 'red':''}}" bindtap='tab_comment' data-index="2">
        <view class="discuss-tita">中评</view>
        <view class="discuss-titb">（{{comment[2]}}）</view>
      </view>
      <view class="discuss-item {{cur_comment == 3 ? 'red':''}}" bindtap='tab_comment' data-index="3">
        <view class="discuss-tita">差评</view>
        <view class="discuss-titb">（{{comment[3]}}）</view>
      </view>
    </view>
    <view class="product_list_box100">
      <view class="list2" wx:for="{{list}}">
        <view class="rightu11">
          <view class="right111">
            <text>{{item.is_anonymous==1?item.nickname:'匿名'}}</text>
            <image wx:for="{{item.star}}" wx:for-index="idx" wx:for-item="itemName" class="star1" src="../../../images/star-active.png" />
          </view>
          <view class="right112">{{item.create_time_text}}</view>
        </view>
        <view class="info">{{item.info}}</view>
        <view class="rightuu">{{item.content}}</view>
        <view class="imgboxe">
          <image wx:for="{{item.imgpath}}" data-index="index" wx:for-index="idxa" wx:for-item="itemNamea" bindtap='previewImage' data-src="{{itemNamea}}" src="{{itemNamea}}" class="imgpai" />
        </view>
      </view>
      <view class="more">
        <image mode='widthFix' src="../../../images/jiazai.png" /> {{more_tips}}
      </view>
    </view>
  </view>

  <view class="ss">
    <view class="ke">
      <navigator open-type='switchTab' url='/pages/home/index/index' hover-class='none'>
        <image class="keimg" src="../../../images/footer-home.png" />
        <view class="kefont" style='color:var(--purplecolor);'>首页</view>
      </navigator>
    </view>
    <view class="ke" bindtap='cart_do'>
      <image class="keimg" src="../../../images/cart.png" />
      <view class="kefont" style='color:var(--pinkcolor);'>购物车</view>
    </view>
    <view class="s2" bindtap='showfu'>加入购物车</view>
    <view class="s3" bindtap='showfu'>立即购买</view>
    <view class="sub" wx:if="{{cart_num>0}}">{{cart_num}}</view>
  </view>
</view>


<view class="fuceng {{hidefu==0?'hidden':''}}" style="display: block;">
  <view class="fucenger" bindtap='hidefu'></view>
  <view class="bai">
    <image class="goods1" src="{{spec_img}}" />
    <view class="ul1">
      <image bindtap='hidefu' class="close-pink" src="../../../images/close-pink.jpg" />
      <view class="t2">{{goodsInfo.name}}</view>
      <view class="t1">￥
        <text class="price">{{price}}</text>
      </view>
      <view class="t3">
        <!-- <text class="t31">已选规格：<text>{{color}}/{{size}}</text></text> -->
      </view>
    </view>

    <block wx:for="{{filter_spec}}" wx:for-item='item' wx:for-index="index">
      <view class="tit">{{index}}：</view>
      <view class="fftuop1">
        <view wx:for="{{item}}" wx:for-item='subitem' wx:for-index="subindex" data-index='{{index}}' data-subindex="{{subindex}}" bindtap="spec_sel" class="fftuop11  {{subitem.sel ==1? 'ffsuel':''}}">{{item[subindex].item}}</view>
      </view>
    </block>

    <!-- <view class="tit">尺寸：</view>
    <view class="fftuop1">
      <view class="fftuop11  {{tabcurrenta == index ? 'ffsuel':''}}" data-index="{{index}}" bindtap="singesizebtn" wx:for="{{sizeArr}}">{{item}}</view>
    </view> -->
    <view class="border">
      <view class="border11">购买数量</view>
      <view class='addbox'>
        <view class="border12" bindtap='add'>+</view>
        <view class="border13">{{num}}</view>
        <view class="border14" bindtap='reduce'>-</view>
      </view>
    </view>
    <view class="other-num">剩余库存{{stock}}件</view>
    <view class="btnp">
      <view class='add-cart' bindtap='cart_add'>加入购物车</view>
      <view class='buy-cart' bindtap='buy_now'>立即购买</view>
    </view>
  </view>
</view>


<!--f1  -->
<view class='fuceng {{f1==0?"hidden":""}}'>
  <view class="fuer" bindtap="hidef1"></view>
  <view class='baibga'>
    <view class='huitit'>优惠券
      <image bindtap='hidef1' class="close-png" src="../../../images/close.png" />
    </view>
    <view class='baibgscroll scroll-top'>
      <view class="hui-box" wx:for="{{couponList}}">
        <image mode='widthFix' class="huibg" src="{{item.has == 1 ? '../../../images/hui-bga.png':'../../../images/hui-bgb.png'}}  " />
        <view class="hui-left">
          <view class="hui-left-one">
            <view class="hui-types">{{item.type_desc}}</view>
            <view class="hui-money">￥{{item.money}}</view>
            <view class="hui-allmoney">满{{item.limit}}可用</view>
          </view>
          <view class="hui-left-two">使用期限：{{item.use_stime}} - {{item.use_etime}}</view>
        </view>
        <view class="hui-right" bindtap='getcoupon' data-index="{{index}}">{{item.has==1?"已领取":"立即领券"}}</view>
      </view>
    </view>
    <view class='sure' bindtap="hidef1">确定</view>
  </view>
</view>
<!--f2  -->
<view class='fuceng {{f2==0?"hidden":""}}'>
  <view class="fuer" bindtap="hidef2"></view>
  <view class='baibgb'>
    <image class="close-img" bindtap="hidef2" src="../../../images/close-pink.jpg" />
    <view class="poster">
      <image class="poster-img" src="{{poster_img}}" />
    </view>
    <view class='sure' bindtap="save_poster">保存图片</view>
    <view class='suretips'>{{config.share_tips}}</view>
  </view>
</view>

<!--f3  -->
<view class='fuceng {{f3==0?"hidden":""}}'>
  <view class="fuer" bindtap="hidef3"></view>
  <view class='baibga'>
    <view class="img-tab">
      <button class="button_btn" open-type='share'>
        <image mode='widthFix' class="wechat" src="../../../images/wechats.png" />
      </button>
      <button class="button_btn" bindtap='shre_friend_circle'>
        <image mode='widthFix' class="wechat" src="../../../images/codes.png" />
      </button>
    </view>
    <view class='sure' bindtap="hidef3">关闭</view>
  </view>
</view>