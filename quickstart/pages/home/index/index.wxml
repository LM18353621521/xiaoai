<!--轮播图  -->
<swiper indicator-dots="true" autoplay="true" circular="true" interval="5000" duration="1000" indicator-color="rgba(255,255,255,.5)" indicator-active-color="#fff">
  <block wx:for="{{carousel}}">
    <swiper-item>
      <image src="{{item.imgpath}}" class="slide-image" />
    </swiper-item>
  </block>
</swiper>
<view class='searchbox'>
  <navigator url='/pages/home/search/search' hover-class='none'>
    <input type='text' class='search' disabled='disabled' name="keyword" placeholder='商品搜索' bindconfirm="search_do" placeholder-style='font-size:24rpx;color:#ccc;'></input>
    <image src="../../../images/search.png" class="searchimg" />
  </navigator>
</view>
<!--菜单  -->
<view class="box scroll_box">
  <scroll-view class="scroll-view_x" scroll-x style="width: auto;overflow:hidden;">
    <view class='item_list' wx:if="{{config.happly_switch==1}}">
      <navigator url='/pages/home/happy/happy' hover-class='none'>
        <image src="../../../images/menua.png" />
        <view class="viewinfotit">开心一刻</view>
      </navigator>
    </view>
    <!-- <view class='item_list'>
      <image src="../../../images/menub.png" />
      <view class="viewinfotit">活动</view>
    </view> -->
    <view class='item_list' wx:for="{{categoryList}}">
      <navigator url='/pages/home/goodsList/goodsList?category_id={{item.id}}' hover-class='none'>
        <image src="{{item.coverimg}}" />
        <view class="viewinfotit">{{item.name}}</view>
      </navigator>
    </view>
  </scroll-view>
</view>
