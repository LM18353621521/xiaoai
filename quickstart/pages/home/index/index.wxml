<!--列表  -->
<view class='product-list-title'>热门推荐</view>
<view class='product-list-box'>
  <view class="roduct_list_box100">
    <view class="iste1" wx:for="{{list}}">
      <navigator url='/pages/home/detail/detail?id={{item.id}}' hover-class='none'>
        <image class="eft11" src="{{item.coverimg}}" />
        <view class="ight1w">
          <view class="ight12w">{{item.name}}</view>
          <view class="ightw">
            <view class="ightw1">¥{{item.price}}
              <text>{{item.sales}}人付款</text>
            </view>
          </view>
        </view>
      </navigator>
    </view>
  </view>
  <view class="more">
    <image mode='widthFix' src="../../../images/jiazai.png" />{{more_tips}}</view>
</view>

<!--优惠券  -->
<view class="coupon" wx:if="{{show_coupon==1&&has_coupon.id}}">
  <view class="a1">
    <navigator url='/pages/user/coupon/coupon' hover-class='none'>
      <image class='coupon-bg' src="../../../images/coupon.png" />
      <view class="a11">
        <view class="a01">¥{{has_coupon.money}}</view>
        <view class="a02">使用期限</view>
        <view class="a02">{{has_coupon.use_stime}}-{{has_coupon.use_etime}}</view>
      </view>
      <view class="a12">立即领券</view>
    </navigator>
  </view>
</view>

<view class="fuceng {{auth_hide==0? 'hidden':''}}">
  <view class="fuer" bindtap="close"></view>
  <view class="fucengbox">
    <view class="fucengtit">微信授权</view>
    <view class='leftrightf'>
      <image class='leftf' src="{{config.logo}}" />
      <view class='rightf'>{{config.web_name}}官方申请获取以下权限:</view>
    </view>
    <view class='span'>
      <text></text>获得你的公开信息(昵称、头像等)</view>
    <view class="fucengbtn">
      <view class="fucengbtn1" bindtap="close">拒绝</view>
      <button class="fucengbtn2" bindtap="close" open-type="getUserInfo" bindgetuserinfo="authUserInfo">允许</button>
    </view>
  </view>
</view>