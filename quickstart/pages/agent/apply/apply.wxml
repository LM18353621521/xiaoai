<!--pages/agent/apply/apply.wxml-->
<view class='page'>


  <view class='bd'>
    <form>
      <view class='info'>
        <view class='title'>代理申请</view>
        <view class='item'>
          <label>手机号码</label>
          <input />
        </view>
        <view class='item sms-code'>
          <label>验证码</label>
          <input />
          <text>获取验证码</text>
        </view>
        <view class='item'>
          <label>姓名</label>
          <input />
        </view>
        <view class='item'>
          <label>微信号</label>
          <input />
        </view>
        <view class='item'>
          <label for='date'>生日</label>
          <picker id="date" aria-haspopup="true" mode="date" value="{{date}}" start="2015-09-01" end="2017-09-01" bindchange="bindDateChange">
            <view class="picker">
              {{date}}
            </view>
          </picker>
        </view>
        <view class='item'>
          <label>微信号</label>
          <input />
        </view>
        <view class='xieyi'>
          <image src='../../../images/sel_yes.png'></image>
          <view>
          同意 <text class='xy_title'>代理协议</text> <text class='xy_tip'>此申请将在提交申请后24小时内审核</text>
          </view>
        </view>
      </view>
      <view class='btns'>
        <button>取消</button>
        <button>提交申请</button>
      </view>
    </form>
  </view>
  <view class='logo_box'>
    <image src='../../../images/logo.jpg'></image>
    <view>晓爱，让天下没哟难做的爱</view>
  </view>
</view>