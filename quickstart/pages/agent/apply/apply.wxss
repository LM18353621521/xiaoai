/* pages/agent/apply/apply.wxss */
page{
  height: 100%;
}
.page{ 
  padding-top:1rpx; 
  width: 100%;
  height: 100%;
  background: linear-gradient( to bottom, #e5308a,#9431f1)
}
.page .bd{
  width: 88%;
  margin: 120rpx auto;
  padding: 20rpx 20rpx 0;
  background-color: transparent;
background-coloe:rgba(157,61,229,0.35);
  border-radius: 13rpx;
  color: #FFF;
}
.title{
  text-align: center;
  font-size: 36rpx;
  margin: 40rpx 0 35rpx;
}
.info{
  font-size: 28rpx;
  padding: 0 50rpx;
}
.info .item{
  display: flex;
  align-items: center;
  margin: 30rpx 0;
}
.info label{
  display: inline-block;
  width: 200rpx;
  line-height: 40rpx;
}
.info input{
  display: inline-block;
  width: 300rpx;
  height: 40rpx !important;
  background: #FFF;
  color: #999;
  padding: 0 5rpx;
}
.info picker{
  display: inline-block;
  width: 300rpx;
  height: 53rpx;
  line-height: 53rpx;
  background: #FFF;
  color: #999;
  padding: 0 5rpx;
}

.info .sms-code input{
  width:160rpx; 
}
.info .sms-code text{
  padding: 0 20rpx;
  font-size: 22rpx;
}
.xieyi{
  display: flex;
  padding:20rpx 0;
}
.xieyi image{
  width: 36rpx;
  height: 36rpx;
  margin: 0 10rpx;
}
.xieyi .xy_title{
  border-bottom: 1rpx solid #fff;
}
.xieyi .xy_tip{
  padding: 0 0 0 20rpx;
  font-size: 18rpx;
}
.btns{
  width: 97%;
  margin: auto;
  border-top: 1px solid #999;
}
.btns button{
  position: none;
  display: inline-block;
  width: 50%;
  background: none;
  border: none;
  border-radius: 0;
  color: #FFF;
}
button::after{ border: none; }
.logo_box{
  text-align: center;
  color: #fff;
  font-size: 26rpx;
}
.logo_box image{
  width: 128rpx;
  height: 128rpx;
  margin: 10rpx 0;
}