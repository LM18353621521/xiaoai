@import "../../../weui.wxss";
page{
  background: #f2f2f2;
  padding-bottom:150rpx;
}
.header{
  background: #fff;
  padding:20rpx;
  overflow: hidden;
  display: flex;
  border-top:5px solid #f8f8f8;
}
.product{
  width: 150rpx;
  height: 150rpx;
  border-radius: 5px;
  flex: 0 0 150rpx;
  margin-right: 20rpx;
}
.header-right{
  padding-top:20rpx;
  flex: 1;
  overflow: hidden;
}
.header-tit{
  width: 100%;
  height: 40rpx;
  line-height: 40rpx;
  font-size:var(--fontSize);
  color: #2f2f2f;
  overflow: hidden;
}
.header-star{
  line-height: 60rpx;
}
.header-star image{
  width: 45rpx;
  height: 45rpx;
  margin-right: 20rpx;
  vertical-align: middle;
}

textarea{
  padding:20rpx;
  height:200rpx;
  line-height:40rpx;
  font-size:var(--fontSize);
  overflow:hidden;
  color:#4c4c4c;
  background: #f2f2f2;
}


.five{
   background: #fff;
   width: 94%;
   padding:40rpx 3% 20rpx;
  color: #4c4c4c;
}
.upload{
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  z-index: 99;
  background: #fff;
  padding-top:30rpx;
}
.upload-img{
  display: block;
  width: 70rpx;
  height: 70rpx;
  margin:0 auto;
}
.upload-font{
  width: 100%;
  margin:0 auto;
  height: 40rpx;
  line-height: 40rpx;
  font-size: 16rpx;
  color: #4c4c4c;
  overflow: hidden;
  text-align: center;
}




.twoa{
   overflow: hidden;
   background:#fff;
   padding:0 20rpx;
   position: relative;
   border-top: 1px solid #f8f8f8;
}
.twob{
   overflow: hidden;
   background:#fff;
   padding:0 20rpx;
   padding-left:80rpx;
   position: relative;
}
.twob .lefta{
  font-size: 26rpx;
}
.lefta{
   width: 30%;
   float: left;
    overflow: hidden;
   height:100rpx;
   line-height: 100rpx;
   color: #4c4c4c;
   font-family: "黑体";
   font-size: 32rpx;
}
.lefta image{
  height:45rpx; 
    width:45rpx;
    margin-top: -6%;
    vertical-align: middle;
    margin-right: 6%;
}
.righta{
   min-width: 67%;
   max-width:67%;
   float: left;
    overflow: hidden;
   height:100rpx;
   line-height: 100rpx;
   color: #aaa;
   font-size: 26rpx;
   border:none;
   text-align: right;
}

.righta image{
  height: 45rpx; 
    width:45rpx;
    margin-top: -2%;
    vertical-align: middle;
}
.niming{
  border-top:10px solid #f8f8f8;
}
.submit{
  width:94%;
  margin:20px auto 0;
   height:90rpx;
   line-height:90rpx;
   color: #fff;
   font-size:var(--fontSize);
   text-align: center;
   overflow: hidden;
   background: linear-gradient(to right,#e5308a,#943ef1);
   border-radius: 6px;
}
