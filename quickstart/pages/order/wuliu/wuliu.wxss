/* pages/order/wuliu/wuliu.wxss */
@import "../../../weui.wxss";

page {
  background: #f2f2f2;
  padding-bottom: 150rpx;
  color: #333;
  font-size: 12px;
}

.track_info {
  margin-bottom: 15px;
  position: relative;
  padding: 12px 10px;
  font-size: 14px;
  background-color: #fff;
}

.track_info .track_goods_v2 .track_goods_imgs {
  margin-right: 10px;
  width: 75px;
  height: 75px;
  -webkit-flex-shrink: 0;
  flex-shrink: 0;
  position: relative;
}

.track_info_item text {
  min-width: 70px;
  color: #999;
}

.track_info_item_content {
  display: inline-block;
  width: auto;
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
}

.track_info .track_goods_v2 {
  position: relative;
  padding: 10px 0;
  width: 100%;
  -webkit-overflow-scrolling: touch;
  overflow: hidden;
  overflow-x: auto;
}

.track_info .track_goods_v2 .track_goods_imgs {
  margin-right: 10px;
  width: 75px;
  height: 75px;
  -webkit-flex-shrink: 0;
  flex-shrink: 0;
  position: relative;
}

.track_info .track_goods_v2  .track_goods_imgs image {
  width: 100%;
  height: 100%;
}

.track_info .track_goods_v2 .track_goods_detail {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
}

.track_info .track_goods_v2 .track_goods_detail_text {
  font-size: 14px;
  color: #333;
  /* line-height: 1.5; */
}

.track_info .track_goods_v2 .track_goods_detail_text {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.track_info .track_goods_v2 .track_goods_detail_text_small {
  font-size: 12px;
  color: #999;
  margin-top: 4px;
}

.track_shipflow {
  padding: 0 20px;
  background-color: #fff;
  padding-bottom: 10px;
}

.track_shipflow_item {
  position: relative;
  -webkit-flex-wrap: wrap;
  flex-wrap: wrap;
  overflow: visible;
}

.track_bottom, .track_info .track_goods, .track_info .track_goods_v2,
.track_info_item, .track_shipflow_item {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  overflow: hidden;
}

.track_shipflow_item_msg {
  display: block;
  width: 100%;
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
}

.track_shipflow_item.cur .track_shipflow_item_status {
  color: #fff;
  background-color: #e5308a;
}

.track_shipflow_item.cur .track_shipflow_item_status.type_dot::after {
  content: "";
  position: absolute;
  box-sizing: border-box;
  top: 50%;
  left: 50%;
  margin-top: -9px;
  margin-left: -9px;
  width: 18px;
  height: 18px;
  border-radius: 9px;
  border: 1px solid #e5308a;
}

.track_shipflow_item::after {
  content: "";
  background: -webkit-linear-gradient(bottom, #969696, #e5308a);
  background: linear-gradient(0deg, rgb(0, 0, 102), rgb(0, 0, 102));
}

.track_shipflow_item.cur .track_shipflow_item_msg {
  color: #e5308a;
}

.track_shipflow_item_status.type_dot {
  margin: 24px 15px 0 5px;
  width: 10px;
  height: 10px;
  border-radius: 5px;
  background-color: #ccc;
}

.track_shipflow_item_status {
  position: relative;
  margin: 15px 10px 0 0;
  width: 20px;
  height: 20px;
  line-height: 20px;
  font-size: 10px;
  text-align: center;
  border-radius: 10px;
  color: #666;
  background-color: #f7f7f7;
}
