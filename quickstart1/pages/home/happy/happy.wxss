
page{
   background: #fff;
   padding-top: 88rpx;
   font-family: "黑体";
}

.scroll-view_H{
  white-space: nowrap;
  height: 86rpx;
  width:100%;
  margin:0 auto;
  position:fixed;
  left: 0;
  top:0;
  background: #fff;
  z-index: 9999;
}
.scroll-view-item_H{
  display: inline-block;
  width: 100%;
   border-bottom:1px solid #f2f2f2;
}

.title{
   width: 13.3%;
   margin:0 10%;
   height: 86rpx;
   line-height:92rpx;
  font-size: var(--fontSize);
  text-align:center;
  overflow:hidden;
  color:#4c4c4c;
  box-sizing: border-box;
  float: left;
}
.titlesel{
   border-bottom:2px solid #B82F89;
   color: #B82F89;
}

.content{
  overflow: hidden;
}

.content-item{
  overflow: hidden;
}
.content-item:first-child{
  display: block;
}
.item{
  padding:0 3%;
  overflow: hidden;
}
.tit{
  width: 100%;
  margin:20rpx auto;
  line-height: 40rpx;
  font-size: var(--fontSize);
  color: #4c4c4c;
  overflow: hidden;
}
.media-box{
  position: relative;
  overflow: hidden
}
.myVideo,.media{
  width: 100%;
  overflow: hidden;
  height: 340rpx;
  border-radius: 6px;
}
.play{
  position: absolute;
  left: 50%;
  top:50%;
  width: 108rpx;
  height: 108rpx;
  margin-left:-54rpx;
  margin-top:-54rpx;
}
.date{
  width: 100%;
  margin:10rpx auto;
  line-height: 60rpx;
  font-size: 26rpx;
  color: #999;
  overflow: hidden;
}
.fu-text{
  width: 100%;
  line-height: 40rpx;
  font-size: var(--fontSize);
  color: #4c4c4c;
  overflow: hidden;
  
}
.fu-text image{
  width: 100%;
  height: auto;
  overflow: hidden;
}