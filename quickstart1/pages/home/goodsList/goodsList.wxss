.search{
  position:absolute;
  left:9%;
  top:24rpx;
  z-index:99999;
  width:30rpx;
  height:30rpx;
}





.scroll-view_H{
  white-space: nowrap;
  border-bottom:2px solid #f8f8f8;
  width:100%;
  height: 70rpx;
  margin:0 auto;
  box-sizing: border-box;
  background: #fff;
}
.scroll-view-item_H{
  display: inline-block;
  width: 100%;
}

.title{
   width: 25%;
   height:70rpx;
   line-height:70rpx;
  font-size: var(--fontSize);
  text-align:center;
  overflow:hidden;
  color:#4c4c4c;
  box-sizing: border-box;
  float: left;
}
.titlesel{
   border-bottom:6px solid #B82F89;
   color: #B82F89;
}








.lists{
	width: 100%;
	background: #fff;
}
.item{
	width: 92%;
	padding: 0rpx 4%;
	margin:40rpx auto 0rpx;
	background: #fff;
  display: flex;
	overflow: hidden;
}
.lt{
  flex:0 0 184rpx;
  overflow: hidden;
  height: 180rpx;
}
.rt{
  flex: 1;
  overflow: hidden;
  padding-left: 5%;
}
.lt image{
	width: 100%;
	height: 100%;
	border-radius: 2px;
}
.rt view:first-child{
	font-size: var(--fontSize);
  height: 90rpx;
	line-height:45rpx;
	color: #4c4c4c;
	overflow:hidden;
  text-overflow:ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.rt view:nth-child(2){
  font-size: var(--fontSize);
  height:60rpx;
	line-height:50rpx;
	color: #ff4a00;
	overflow:hidden;
}
.rt view:last-child{
	font-size: var(--fontSize);
	color: #b3b3b3;
  height:40rpx;
	line-height:40rpx;
}



