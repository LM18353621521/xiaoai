<form bindsubmit='cart_submit'>
  <block wx:for="{{cartList}}">
    <view class="lists {{item.number==0?'hidden':''}}">
      <image src="{{item.selected==1?'../../../images/yes.png':'../../../images/no.png'}}" data-index="{{index}}" bindtap='sele' class="sele" />
      <image src="{{item.coverimg}}" class="listsleft" />
      <view class="listsright">
        <view class="lists1">{{item.name}}</view>
        <view class="lists11">{{item.spec_key}}</view>
        <view class="border">
          <view class="border11">￥{{item.price}}</view>
          <view class='addbox'>
            <view class="border14" data-index="{{index}}" bindtap='reduce'>-</view>
            <input disabled='true' class='border13' value='{{item.number}}'></input>
            <view class="border12" data-index="{{index}}" bindtap='add'>+</view>
          </view>
        </view>
      </view>
    </view>
  </block>
  <view class="btnu" hidden='{{hidedel}}'>
    <view class="btnu1">
      <image src="{{select_all==1?'../../../images/yes.png':'../../../images/no.png'}}"bindtap='seleall' class="seleall" />全选
      <text>合计：<text>￥{{total_count.total_price}}</text></text>
    </view>
    <button class="btnu2" form-type='submit'>立即付款({{total_count.total_num}})</button>
  </view>
</form>