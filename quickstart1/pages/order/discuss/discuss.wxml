  <view class="lefta">配送员服务态度</view>
  <view class="righta">
    <image bindtap="starbtnc" wx:for="{{starc}}" data-index="{{index}}" src="{{item.src}}" />
  </view>
</view> -->
<button class='submit' bindtap='submit_do'>保存</button>
</view>